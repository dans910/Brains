<?xml version="1.0" encoding="utf-8"?>
    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="danielsandovalutrgv.brains.Add"
        android:background="#008800ff"
        android:backgroundTint="#00ffffff">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/exitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:background="@color/colorPrimary"
            app:backgroundTint="@color/colorPrimary"
            android:tint="#ffffff"
            android:tintMode="multiply"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_exit" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/videoButton"
                android:src="@drawable/ic_video"
                android:background="@drawable/design_fab_background"
                android:backgroundTint="@color/colorPrimary"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:backgroundTintMode="multiply"
                android:layout_marginBottom="15dp"
                android:layout_above="@+id/editButton"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:minWidth="50dp"
                android:minHeight="50dp"
                android:background="@drawable/design_fab_background"
                android:backgroundTint="@color/colorPrimary"
                android:backgroundTintMode="multiply"
                android:src="@drawable/ic_gallery"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="70dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/micButton"
                android:src="@drawable/ic_mic"
                android:background="@drawable/design_fab_background"
                android:backgroundTint="@color/colorPrimary"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:layout_above="@+id/imageButton"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="15dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editButton"
                android:src="@drawable/ic_edit"
                android:background="@drawable/design_fab_background"
                android:backgroundTint="@color/colorPrimary"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:layout_above="@+id/micButton"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="15dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/clearButton"
                android:src="@drawable/ic_clear"
                android:background="@drawable/design_fab_background"
                android:backgroundTint="@color/colorPrimary"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:backgroundTintMode="multiply"
                android:layout_marginBottom="15dp"
                android:layout_above="@+id/videoButton"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
