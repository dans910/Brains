<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="danielsandovalutrgv.brains.micControls"
    android:gravity="clip_horizontal">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startRecord"
        android:src="@drawable/ic_mic"
        android:background="@drawable/design_fab_background"
        android:backgroundTint="@color/colorPrimary"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:onClick="nowR"
        android:contentDescription="@string/micbutton"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/recordStatus"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/press_mic_button_to_start_recording"
        android:id="@+id/recordStatus"
        android:layout_marginTop="30dp"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/startRecord"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="385dp"
            android:id="@+id/audioList"
            android:layout_gravity="center"
            android:choiceMode="singleChoice"
            tools:listitem="@android:layout/simple_list_item_2"
            android:longClickable="false"
            android:nestedScrollingEnabled="false" />
    </FrameLayout>


</RelativeLayout>
