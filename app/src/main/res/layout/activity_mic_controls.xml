<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="danielsandovalutrgv.brains.micControls"
    android:gravity="clip_horizontal">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startRecord"
        android:src="@drawable/ic_mic"
        android:background="@drawable/design_fab_background"
        android:backgroundTint="@color/colorPrimary"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:onClick="nowR"
        android:contentDescription="@string/micbutton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stopRecord"
        android:src="@drawable/ic_stop"
        android:background="@drawable/design_fab_background"
        android:backgroundTint="@color/colorPrimary"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:layout_marginEnd="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/stoprecord" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/press_mic_button_to_start_recording"
        android:id="@+id/recordStatus"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:textColor="@android:color/black" />
</RelativeLayout>
